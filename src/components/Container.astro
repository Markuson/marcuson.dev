---
export interface Props {
  as?: 'div' | 'section' | 'main' | 'article';
  class?: string;
  id?: string;
}

const { as: Element = 'div', class: className = '', id, ...props } = Astro.props;
---

<Element
  class={`max-w-8xl mx-auto px-6 sm:px-8 lg:px-12 ${className}`}
  id={id}
  {...props}
>
  <slot />
</Element>