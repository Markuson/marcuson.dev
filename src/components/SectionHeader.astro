---
export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = false, class: className = '' } = Astro.props;
---

<div class={`${centered ? 'text-center' : ''} ${className}`}>
  <h2 class="text-section-title lg:text-section-title-lg font-bold text-text-primary mb-4">
    {title}
  </h2>
  {
    subtitle && (
      <p class="text-lg text-text-secondary max-w-3xl leading-relaxed">
        {subtitle}
      </p>
    )
  }
</div>