---
export interface Props {
  text: string;
  variant?: 'default' | 'accent' | 'status';
  class?: string;
}

const { text, variant = 'default', class: className = '' } = Astro.props;

const baseClasses = 'inline-block px-2 py-1 rounded-full text-xs font-medium leading-tight whitespace-nowrap';
const variantClasses = {
  default: 'bg-bg-tertiary text-text-muted',
  accent: 'bg-accent-primary text-bg-primary',
  status: '' // Will be overridden by className for dynamic colors
};
---

<span class={`${baseClasses} ${variant === 'status' ? className : variantClasses[variant]} ${variant !== 'status' ? className : ''}`}>
  {text}
</span>