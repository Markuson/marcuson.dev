---
import Container from '@/components/Container.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import type { Language } from '@/utils/i18n';
import { useTranslations } from '@/utils/i18n';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="contact-section" class="py-20 lg:py-32 bg-slate-900 ">
  <Container>
    <SectionHeader
      title={t('contact.title')}
      subtitle={t('contact.subtitle')}
      centered={true}
      class="mb-16"
    />

    <!-- Contact Cards Row 1 -->
    <div class="grid md:grid-cols-3 gap-6 mb-8 mx-[10%]">
      <!-- Email Card -->
      <article class="bg-bg-secondary rounded-lg p-6 text-center transition-all duration-200 shadow-card hover:shadow-lg hover:-translate-y-1 border border-border-primary">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-bg-tertiary rounded-full text-accent-primary mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">Email</h3>
        <p class="text-text-secondary text-sm mb-4">hi@marcuson.dev</p>
        <a
          href="mailto:hi@marcuson.dev"
          class="inline-flex items-center justify-center w-full px-4 py-2 bg-accent-primary text-bg-primary font-medium rounded hover:bg-accent-secondary transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent-primary focus:ring-offset-2 focus:ring-offset-bg-secondary"
        >
          Send Email
        </a>
      </article>

      <!-- GitHub Card -->
      <article class="bg-bg-secondary rounded-lg p-6 text-center transition-all duration-200 shadow-card hover:shadow-lg hover:-translate-y-1 border border-border-primary">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-bg-tertiary rounded-full text-accent-primary mb-4">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">GitHub</h3>
        <p class="text-text-secondary text-sm mb-4">@Markuson</p>
        <a
          href="https://github.com/Markuson"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center w-full px-4 py-2 border border-accent-primary text-accent-primary font-medium rounded hover:bg-accent-primary hover:text-bg-primary transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent-primary focus:ring-offset-2 focus:ring-offset-bg-secondary"
        >
          View Repos
        </a>
      </article>

      <!-- LinkedIn Card -->
      <article class="bg-bg-secondary rounded-lg p-6 text-center transition-all duration-200 shadow-card hover:shadow-lg hover:-translate-y-1 border border-border-primary">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-bg-tertiary rounded-full text-accent-primary mb-4">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" clip-rule="evenodd" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">LinkedIn</h3>
        <p class="text-text-secondary text-sm mb-4">marc-uson</p>
        <a
          href="https://linkedin.com/in/marc-uson"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center w-full px-4 py-2 border border-accent-primary text-accent-primary font-medium rounded hover:bg-accent-primary hover:text-bg-primary transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent-primary focus:ring-offset-2 focus:ring-offset-bg-secondary"
        >
          View Profile
        </a>
      </article>
    </div>

    <!-- Contact Cards Row 2 -->
    <div class="grid md:grid-cols-2 gap-6 mb-12 mx-[10%]">
      <!-- Start a Project Card -->
      <article class="bg-bg-secondary rounded-lg p-8 transition-all duration-200 shadow-card hover:shadow-lg hover:-translate-y-1 border border-border-primary">
        <div class="flex items-start">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-bg-tertiary rounded-full text-accent-primary mr-4 flex-shrink-0">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-text-primary mb-3">Start a Project</h3>
            <p class="text-text-secondary leading-relaxed mb-4">
              Have an exciting project in mind? Let's discuss how we can bring your ideas to life with modern technology and innovative solutions.
            </p>
            <a
              href="mailto:hi@marcuson.dev?subject=Project Collaboration"
              class="inline-flex items-center px-6 py-3 bg-accent-primary text-bg-primary font-medium rounded hover:bg-accent-secondary transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent-primary focus:ring-offset-2 focus:ring-offset-bg-secondary"
            >
              Get In Touch
            </a>
          </div>
        </div>
      </article>

      <!-- Download CV Card -->
      <article class="bg-bg-secondary rounded-lg p-8 transition-all duration-200 shadow-card hover:shadow-lg hover:-translate-y-1 border border-border-primary">
        <div class="flex items-start">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-bg-tertiary rounded-full text-accent-primary mr-4 flex-shrink-0">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-text-primary mb-3">Download CV</h3>
            <p class="text-text-secondary leading-relaxed mb-4">
              Get a detailed overview of my experience, skills, and achievements in full-stack development, IoT, and AI technologies.
            </p>
            <a
              href="/assets/cv/marcuson.pdf"
              download
              class="inline-flex items-center px-6 py-3 border border-accent-primary text-accent-primary font-medium rounded hover:bg-accent-primary hover:text-bg-primary transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent-primary focus:ring-offset-2 focus:ring-offset-bg-secondary"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Download PDF
            </a>
          </div>
        </div>
      </article>
    </div>

    <!-- Current Status -->
    <div class="bg-bg-secondary rounded-lg p-8 transition-all duration-200 shadow-card border border-border-primarybg-bg-secondary border border-gray-700 rounded-lg p-8 text-center mx-[10%]">
        <div class="inline-flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>

        <h3 class="text-xl font-semibold text-text-primary mb-3">
          Current Status
        </h3>

        <p class="text-lg text-text-secondary leading-relaxed max-w-3xl mx-auto mb-2">
          Based in Uppsala. Available for remote collaboration worldwide
        </p>

        <div class="inline-flex items-center text-green-500">
          <div class="w-3 h-3 bg-green-500 rounded-full mr-2 animate-pulse"></div>
          <span class="font-medium">Open to new opportunities</span>
        </div>
    </div>
  </Container>
</section>