---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  lang: 'en' | 'es' | 'ca';
}

const { title, description = 'Full-Stack Developer & AI Enthusiast', lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Marc Uson" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Language alternates -->
    <link rel="alternate" hreflang="en" href={`https://marcuson.dev/en${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
    <link rel="alternate" hreflang="es" href={`https://marcuson.dev/es${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
    <link rel="alternate" hreflang="ca" href={`https://marcuson.dev/ca${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
    <link rel="alternate" hreflang="x-default" href={`https://marcuson.dev/en${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
  </head>
  <body>
    <slot />
  </body>
</html>
