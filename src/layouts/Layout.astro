---
import '../styles/global.css';
import Navigation from '@/components/navigation/Navigation.astro';

export interface Props {
  title: string;
  description?: string;
  lang: 'en' | 'es' | 'ca';
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article' | 'profile';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  keywords?: string[];
}

const {
  title,
  description = 'Full-Stack Developer & AI Enthusiast',
  lang,
  image, // TODO: Add OG image at /public/assets/og-image.jpg (1200x630px) - see docs/TODO.md
  imageAlt = 'Marc Uson - Full-Stack Developer & AI Enthusiast',
  type = 'website',
  publishedTime,
  modifiedTime,
  author = 'Marc Uson',
  keywords = ['Full-Stack Developer', 'AI', 'IoT', 'React', 'Node.js', 'TypeScript', 'Machine Learning']
} = Astro.props;

const siteUrl = 'https://marcuson.dev';
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
const canonicalUrl = currentUrl;

// Create structured data for person/professional
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Marc Uson",
  "url": siteUrl,
  "sameAs": [
    "https://github.com/Markuson",
    "https://linkedin.com/in/marc-uson"
  ],
  "jobTitle": "Full-Stack Developer",
  "description": "Full-Stack Developer & AI Enthusiast specializing in React, Node.js, IoT, and Machine Learning",
  "knowsAbout": keywords,
  "alumniOf": {
    "@type": "EducationalOrganization",
    "name": "Technical Background in Industrial Automation"
  },
  "workLocation": {
    "@type": "Place",
    "name": "Uppsala, Sweden"
  }
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="keywords" content={keywords.join(', ')} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content={lang} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={new URL(image, siteUrl).href} />}
    {image && <meta property="og:image:alt" content={imageAlt} />}
    {image && <meta property="og:image:width" content="1200" />}
    {image && <meta property="og:image:height" content="630" />}
    <meta property="og:site_name" content="Marc Uson" />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : lang === 'es' ? 'es_ES' : 'ca_ES'} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {author && <meta property="article:author" content={author} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {image && <meta property="twitter:image" content={new URL(image, siteUrl).href} />}
    {image && <meta property="twitter:image:alt" content={imageAlt} />}
    <meta name="twitter:creator" content="@marcuson" />

    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#28E07A" />
    <meta name="msapplication-TileColor" content="#0A0D11" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Language alternates -->
    <link rel="alternate" hreflang="en" href={`${siteUrl}/en${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
    <link rel="alternate" hreflang="es" href={`${siteUrl}/es${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
    <link rel="alternate" hreflang="ca" href={`${siteUrl}/ca${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />
    <link rel="alternate" hreflang="x-default" href={`${siteUrl}/en${Astro.url.pathname.replace(/^\/(en|es|ca)/, '')}`} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Preload critical resources -->
    <link rel="preload" href="/hero-background.svg" as="image" />
    <link rel="preload" href="/favicon.svg" as="image" />

    <!-- DNS prefetch for external domains -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//github.com" />
    <link rel="dns-prefetch" href="//linkedin.com" />

    <!-- Preconnect to critical external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />

    <!-- Prefetch likely navigation targets -->
    <link rel="prefetch" href={`${siteUrl}/${lang === 'en' ? 'es' : 'en'}`} />
    <link rel="prefetch" href={`${siteUrl}/sitemap-index.xml`} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <!-- Skip to content link for keyboard navigation -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-accent-primary focus:text-bg-primary focus:rounded focus:font-medium focus:shadow-lg"
    >
      Skip to main content
    </a>

    <header>
      <Navigation lang={lang} currentPath={Astro.url.pathname} />
    </header>

    <main id="main-content">
      <slot />
    </main>
  </body>
</html>
